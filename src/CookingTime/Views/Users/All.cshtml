@model IEnumerable<CookingTime.Models.Users.UserDetailsOutputModel>

<div class="breadcumb-area bg-img bg-overlay" style="background-image: url(../img/static/breadcrumbs/breadcrumb2.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-text text-center">
                    <h2>Потребители</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="about-area section-padding-80">
    <div class="container">
        <div class="row mb-50">
            <a asp-action="Add">Добави</a>
        </div>
        
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Име</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">Имейл</th>
                        <th scope="col">Действия</th>
                    </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@user.Id</th>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                    <div class="post-options d-flex justify-content-between">
                                        <form method="get" asp-action="Edit" asp-route-id="@user.Id">
                                            <button type="submit" class="btn"><i class="fa-solid fa-pen-to-square"></i></button>
                                        </form>

                                        <form method="post" asp-action="Delete" asp-route-id="@user.Id">
                                                <button type="submit" class="btn"><i class="fa-solid fa-trash"></i></button>
                                        </form>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>